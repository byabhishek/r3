<div id="page-content">
<h1 class="text-center">This Is Create New Article Page</h1>
 <%= render 'form'%>
 </div>



<%
=begin%>
 <%if @article.errors.any?%>
<h2>The Following message Prevant To Save</h2>
<ul>
<% @article.errors.full_messages.each do |msg|%>
<li><%= msg %></li>
<%end%>
</ul>
<%end%>
<%= form_with scope: :article, url: articles_path, local: true do |f|%>
   <p><%= f.label :Title %><br/>
      <%= f.text_field :title%>
   </p>
   <p><%= f.label :Description %><br/>
      <%= f.text_area :description%>
   </p>

   <p>
   <%= f.submit %>
   </p>
<% end %> 
<%
=end%>
