
  <h1 class="text-center">This Is Articles Listing Index Page</h1>
  <div class="container">
  <% @articles.each do |article| %>
      <div class="row justify-content-md-center">
        <div class="col-10 mt-4 mb-4">
          <div class="card text-center">
              <div class="card-header font-italic">
                by <%= article.user.username if article.user%>
              </div>
              <div class="card-body">
                <h5 class="card-title"><%=link_to article.title, article_path(article.id), class:"text-success"%></h5>
                <p class="card-text"><%=truncate(article.description, length: 100)%></p>
                <%= link_to 'show', article_path(article.id), class:"btn btn-outline-success"%>
                <%= link_to 'edit', edit_article_path(article.id), class:"btn btn-outline-info"%>
                <%= link_to 'Delete', article_path(article.id), method: :delete ,data: {confirm:"Are You Sure ? , You Want To Delete"}, class:"btn btn-outline-danger"%>
              </div>
                <div class="card-footer text-muted">
                  <small>Created <%= time_ago_in_words(article.created_at) %> ago, edited <%= time_ago_in_words(article.updated_at)%> ago</small>
                </div>
            </div>
        </div>
      </div>
  <%end%>
  </div>





